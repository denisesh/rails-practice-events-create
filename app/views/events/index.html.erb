 <table class="table">
     <thead>
        <tr>
          <th>Description</th>
          <th>Date</th>
          <th>Id Required</th>
          <th>Capacity</th>
          <th>Directions  </th>
          <th> LINKS </th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td>
              <%= event.description %>
            </td>
            <td>
              <%= event.date %>
            </td>
            <td>
              <%= event.requires_id %>
            </td>
            <td>
              <%= event.capacity %>
            </td>
            <td>
              <%= event.directions %>
            </td>
            <td>
              <%= link_to "Edit", edit_event_path(event) %>
              <%= link_to "Delete", event_path(event), method: :delete, data:{confirm: "really?"} %>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>


